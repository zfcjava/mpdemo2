.header_container {
  position: relative;
}

.select_container {
  width: 100%;
  height: 108rpx;
  background-color: #fff;
  display: flex;
}

.select_item {
  width: 200rpx;
  height: 76rpx;
  margin-top: 26rpx;
  text-align: center;
  background-color: rgba(248, 248, 250, 1);
  padding-top: 8rpx;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  font-size: 15px;
  color: #222;
  font-weight: 700;
}

.select_item_un {
  width: 200rpx;
  height: 60rpx;
  margin-top: 26rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: rgba(248, 248, 250, 1);
  border-radius: 30rpx;
  font-size: 15px;
  color: #222;
}

/* 点击按钮弹出的菜单 */

.menu_dialog {
  width: 100%;
  background-color: rgba(248, 248, 250, 1);
  position: absolute;
}

/* 可选择的选项 */

.menu_knowledge_options {
  width: 100%;
  height: 440rpx;
  display: flex;
}

.knowledge_level {
  display: flex;
  flex-direction: column;
}

.knowledge_level1 {
  width: 208rpx;
  height: 100%;
}

.knowledge_level2 {
  width: 252rpx;
  height: 100%;
}

.knowledge_level3 {
  width: 290rpx;
  height: 100%;
}

.right_divider {
  position: relative;
}

.right_divider::after {
  content: '';
  width: 2rpx;
  height: 100%;
  background-color: #eee;
  position: absolute;
  right: 0;
  top: 0;
}

.level_font, .level_font_select {
  color: #222;
  font-size: 13px;
  width: 78rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.level_font_select {
  color: #3aa3ff;
}

.menu_item_container{
  margin-left: 50rpx;
  margin-top: 36rpx;
  width: 100%;
  height: 36rpx;
}
.right_arrow {
  position: relative;
}

.right_arrow::after {
  content: '';
  width: 10rpx;
  height: 10rpx;
  border-top: 1rpx solid #222;
  border-right: 1rpx solid #222;
  position: absolute;
  right: 106rpx;
  top: 12rpx;
  transform: rotate(45deg);
}

.right_arrow_select {
  position: relative;
}

.right_arrow_select::after {
  content: '';
  width: 10rpx;
  height: 10rpx;
  border-top: 1rpx solid #3aa3ff;
  border-right: 1rpx solid #3aa3ff;
  position: absolute;
  right: 106rpx;
  top: 12rpx;
  transform: rotate(45deg);
}

.menu_hardness_options, .menu_type_options {
  width: 100%;
  height: 112rpx;
  display: flex;
}

/* 确定和重置按钮 */

.menu_two_operations, .menu_one_operation {
  height: 100rpx;
  width: 100%;
  background-color: #ffd500;
  display: flex;
  color: #222;
  font-size: 15px;
}

.menu_two_operations .reset {
  width: 50%;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
}

.menu_two_operations .confirm {
  width: 50%;
  margin: 10rpx auto;
  text-align: center;
}

/* TODO 边界没有限制 */

.menu_two_operations .confirm .num_des {
  font-size: 13px;
}

.menu_one_operation {
  line-height: 100rpx;
  text-align: center;
}

.menu_one_operation view {
  margin: 0 auto;
}

.menu_pop, menu_pop_select {
  width: 160rpx;
  height: 52rpx;
  background-color: #fff;
  color: #222;
  font-size: 13px;
  margin: 34rpx 13rpx 26rpx 14rpx;
  text-align: center;
  border-radius: 26rpx;
  line-height: 52rpx;
}

.menu_pop_select {
  background-color: #565656;
  color: #fff;
}
